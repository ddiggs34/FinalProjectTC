@model Game


<style>
    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    input, textarea {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        box-sizing: border-box;
    }

    button {
        background-color: #4CAF50;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>

@using (Html.BeginForm("UpdateGameToDatabase", "Game", FormMethod.Post))
{
    <div>
        <label asp-for="HomeTeam">Home Team:</label>
        <input asp-for="HomeTeam" />
    </div>
    <div>
        <label asp-for="AwayTeam">Away Team:</label>
        <input asp-for="AwayTeam" />
    </div>
    <div>
        <label asp-for="Date">Date:</label>
        <input asp-for="Date" type="date" />
    </div>
    <div>
        <label asp-for="IsWatched">Watched:</label>
        <input asp-for="IsWatched" type="checkbox" />
    </div>
    <div>
        <label asp-for="Rating">Rating:</label>
        <input asp-for="Rating" type="number" min="1" max="5" />
    </div>
    <div>
        <label asp-for="Comment">Comment:</label>
        <textarea asp-for="Comment"></textarea>
    </div>
    <div>
        <button type="submit">Update Game</button>
    </div>
}


@model Game


<style>
    body {
        background-color: black;
        color: white;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    input, textarea {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        box-sizing: border-box;
    }

    button {
        background-color: orange; /* Updated to orange */
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    table.table {
        background-color: black;
        color: white;
        border: 2px solid orange;
        border-collapse: collapse;
        width: 100%;
    }

        table.table th, table.table td {
            border: 2px solid orange;
            padding: 8px;
            text-align: left;
        }

        table.table th {
            background-color: black;
            color: orange;
        }

    .btn {
        color: white;
        background-color: orange;
        border: 1px solid orange;
    }

        .btn:hover {
            background-color: darkorange;
            border: 1px solid darkorange;
        }
</style>

@using (Html.BeginForm("UpdateGameToDatabase", "Game", FormMethod.Post))
{
    <div>
        <label asp-for="HomeTeam">Home Team:</label>
        <input asp-for="HomeTeam" />
    </div>
    <div>
        <label asp-for="AwayTeam">Away Team:</label>
        <input asp-for="AwayTeam" />
    </div>
    <div>
        <label asp-for="Date">Date:</label>
        <input asp-for="Date" type="date" />
    </div>
    <div>
        <label asp-for="IsWatched">Watched:</label>
        <input asp-for="IsWatched" type="checkbox" />
    </div>
    <div>
        <label asp-for="Rating">Rating:</label>
        <input asp-for="Rating" type="number" min="1" max="5" />
    </div>
    <div class="form-group">
        <label asp-for="Comment">Comment (Max 240 characters):</label>
        <textarea asp-for="Comment" class="form-control" maxlength="240"></textarea>
    </div>



    <div>
        <input asp-for="GameId" type="hidden" value="@Model.GameId" />
    </div>
    <div>
        <button type="submit">Update Game</button>
    </div>
}


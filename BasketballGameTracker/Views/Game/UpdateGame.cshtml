        color: white;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    input, textarea {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        box-sizing: border-box;
    }

    button {
        background-color: orange; /* Updated to orange */
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    table.table {
        background-color: black;
        color: white;
        border: 2px solid orange;
        border-collapse: collapse;
        width: 100%;
    }

        table.table th, table.table td {
            border: 2px solid orange;
            padding: 8px;
            text-align: left;
        }

        table.table th {
            background-color: black;
            color: orange;
        }

    .btn {
        color: white;
        background-color: orange;
        border: 1px solid orange;
    }

        .btn:hover {

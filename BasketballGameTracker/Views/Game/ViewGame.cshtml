@model Game

<style>
    body {
        background-color: black;
        color: white;
    }

    table.table {
        background-color: black;
        color: white;
        border: 2px solid orange;
        border-collapse: collapse;
        width: 100%;
    }

        table.table th, table.table td {
            border: 2px solid orange;
            padding: 8px;
            text-align: left;
        }

        table.table th {
            background-color: black; /* changed to black */
            color: orange; /* changed to orange */
        }

    .btn {
        color: white;
        background-color: orange;
        border: 1px solid orange;
    }

        .btn:hover {
            background-color: darkorange;
            border: 1px solid darkorange;
        }
</style>

<div class="container mt-4">
    <h3>@Model.HomeTeam vs @Model.AwayTeam Details</h3>

    <table class="table">
        <tr>
            <th>Game ID</th>
            <th>Home Team</th>
            <th>Away Team</th>
            <th>Date</th>
            <th>Watched?</th>
            <th>Rating</th>
            <th>Review</th>
        </tr>
        <tr>
            <td>@Model.GameId</td>
            <td>@Model.HomeTeam</td>
            <td>@Model.AwayTeam</td>
            <td>@Model.Date.ToShortDateString()</td> <!-- Display only date -->
            <td>@Model.IsWatched</td>
            <td>@Model.Rating</td>
            <td>@Model.Comment</td>
        </tr>
    </table>

    <div class="row">
        <div class="col-md-6">
            <a href="/Game/UpdateGame/@Model.GameId" class="btn">Update this Game</a>
        </div>
        <div class="col-md-6">
            <form asp-action="DeleteGame" method="post">
                <input type="hidden" asp-for="GameId" />
                <button type="submit" class="btn" onclick="return confirm('Are you sure you want to delete this game?')">Delete Game</button>
            </form>
        </div>
    </div>
</div>

